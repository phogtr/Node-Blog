<div class="row">
  <div class="col-sm-2"></div>
  <div class="col-sm-5">
    <div class="card">
      <div class="card-body">
        <h2>Log In</h2>
        <hr class="login-line" />
        <%- include("../partials/messages.ejs") %>
        <form action="login" method="POST">
          <div class="form-group">
            <label for="email" class="login-input">Email address</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control form-control-lg"
              placeholder="name@example.com"
            />
          </div>
          <div class="form-group">
            <label for="password" class="login-input">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control form-control-lg"
            />
          </div>
          <div class="custom-control custom-checkbox my-3 mr-sm-2">
            <input type="checkbox" class="custom-control-input" id="customControlInline" />
            <label class="custom-control-label" for="customControlInline">Remember me</label>
          </div>
          <button type="submit" class="btn btn-outline-info btn-lg">
            Login
          </button>
          <a class="forgot-pw" href="#">Forgot Password?</a>
        </form>
        <div>
          Need an Account?
          <a class="forgot-pw" href="register"> Register</a>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-3"></div>
  <div class="col-sm-2"></div>
</div>
