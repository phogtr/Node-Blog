<div class="card">
  <div class="card-body">
    <h2>Register</h2>
    <hr class="login-line" />
    <%- include("../partials/messages.ejs") %>
    <form action="register" method="POST">
      <div class="form-group">
        <label for="name" class="login-input">Username</label>
        <input
          type="name"
          id="name"
          name="name"
          class="form-control form-control-lg"
          value="<%= typeof name != 'undefined' ? name : '' %>"
        />
      </div>
      <div class="form-group">
        <label for="email" class="login-input">Email address</label>
        <input
          type="email"
          id="email"
          name="email"
          class="form-control form-control-lg"
          placeholder="name@example.com"
          value="<%= typeof email != 'undefined' ? email : '' %>"
        />
      </div>
      <div class="form-group">
        <label for="password" class="login-input">Password</label>
        <input
          type="password"
          id="password"
          name="password"
          class="form-control form-control-lg"
          value="<%= typeof email != 'undefined' ? password : '' %>"
        />
      </div>
      <div class="form-group">
        <label for="password2" class="login-input">Confirm Password</label>
        <input
          type="password"
          id="password2"
          name="password2"
          class="form-control form-control-lg"
          value="<%= typeof email != 'undefined' ? password2 : '' %>"
        />
      </div>
      <button type="submit" class="btn btn-outline-info btn-lg">
        Sign Up
      </button>
    </form>
    <div>
      Already Have An Account?
      <a class="forgot-pw" href="login">Sign In</a>
    </div>
  </div>
</div>
