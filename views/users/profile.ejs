<%- include("../partials/messages.ejs") %>

<div class="card">
  <div class="card-header">
    <div class="mb-0 post-title">
      Profile Info
    </div>
  </div>
  <div class="card-body">
    <h1><%= user.name %></h1>
    <div>
      <p><%= user.email %></p>
    </div>
    <hr class="card-line" />
    <form action="profile" method="POST">
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="name">Name</label>
        <div class="col-sm-10">
          <input class="form-control" type="name" id="name" name="name" value="<%= user.name %>" />
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="email" class="login-input">Email</label>
        <div class="col-sm-10">
          <input
            class="form-control"
            type="email"
            id="email"
            name="email"
            value="<%= user.email %>"
          />
        </div>
      </div>
      <button type="submit" class="btn btn-outline-info btn-lg">
        Update
      </button>
    </form>
  </div>
</div>
