<%- include("../partials/messages.ejs") %>
<h1>Edit Post</h1>
<form action="<%= `${posts._id}` %>" method="POST" enctype="multipart/form-data">
  <div>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" value="<%= posts.title %>" />
  </div>
  <div>
    <label for="content">Content</label>
    <textarea id="content" name="content"><%= posts.content %></textarea>
  </div>
  <div>
    <label>Image</label>
    <input type="file" id="image" name="image" />
  </div>
  <div>
    <a href="<%= `/post/${posts._id}` %>" class="btn btn-outline-info btn-lg">
      Cancel
    </a>
    <button type="submit" class="btn btn-outline-info btn-lg">
      Submit
    </button>
  </div>
</form>
