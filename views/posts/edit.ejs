<%- include("../partials/messages.ejs") %>
<div class="card card-margin">
  <div class="card-body">
    <h2>Edit Post</h2>
    <hr class="card-line" />
    <form action="<%= `${posts._id}` %>" method="POST" enctype="multipart/form-data">
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="title">Title</label>
        <div class="col-sm-10">
          <input
            class="form-control"
            type="text"
            id="title"
            name="title"
            value="<%= posts.title %>"
          />
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label" for="content">Content</label>
        <div class="col-sm-10">
          <textarea class="form-control" id="content" name="content" rows="15">
              <%= posts.content %></textarea
          >
        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">Image</label>
        <div class="col-sm-10">
          <div class="custom-file">
            <input type="file" class="form-control-file" id="image" name="image" />
          </div>
        </div>
      </div>
      <div>
        <a href="<%= `/post/${posts._id}` %>" class="btn btn-outline-secondary btn-lg">
          Cancel
        </a>
        <button type="submit" class="btn btn-outline-info btn-lg">
          Submit
        </button>
      </div>
    </form>
  </div>
</div>
</div>
</div>