<div class="row">
  <div class="col-sm"></div>
  <div class="col-sm-8">
    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
      <ul class="nav justify-content-start">
        <a class="navbar-brand" href="#">Citehtsea</a>
        <a class="nav-item nav-link active" href="/">Home </a>
        <a class="nav-item nav-link" href="#">About</a>
      </ul>
      <ul class="nav justify-content-end">
        <% if (user) { %>
        <a id="boxDropDown">
          <span><%= user.name %> </span>
        </a>
        <div id="menuBox" style="display: none;">
          <a href="/post/new">New Post</a>
          <a href="/user/dashboard">Dashboard</a>
          <a href="/user/profile">Profile</a>
          <a href="/user/logout">Logout</a>
        </div>
        <% } else { %>
        <a class="nav-item nav-link" href="/user/login">Login</a>
        <a class="nav-item nav-link" href="/user/register">Register</a>
        <% } %>
      </ul>
    </nav>
  </div>
  <div class="col-sm"></div>
</div>

<script type="text/javascript">
  document.getElementById("boxDropDown").addEventListener("mouseover", (e) => {
    e.preventDefault();
    document.getElementById("menuBox").style.display = "block";
  });

  document.getElementById("menuBox").addEventListener("mouseleave", (e) => {
    e.preventDefault();
    document.getElementById("menuBox").style.display = "none";
  });
</script>
