<%- include("partials/messages.ejs") %>
<% posts.sort((a, b) => b.date - a.date) %> <% posts.forEach(post => { %> <% users.forEach(u => { %>
<% if (post.author == u._id) { %>
<div class="card card-margin">
  <div class="card-header">
    <div class="mb-0">
      <a class="card-title" href="<%= `/post/${post._id}` %> "> <%= post.title %> </a>
    </div>
  </div>
  <div class="card-body">
    <div>
      <%= post.content %>
    </div>
    <div>
      <img src="<%= post.imageSrc %>" class="img-fluid shadow-sm p-3 mb-3 mt-3 bg-white rounded" />
    </div>
  </div>
  <div class="card-footer text-muted">
    <span
      ><i class="fa fa-clock-o" aria-hidden="true"></i> <%= post.date.toISOString().split('T')[0] %>
    </span>
    <span class="by-user"
      ><i class="fa fa-user-o" aria-hidden="true"></i> <%= u.name.charAt(0).toUpperCase() +
      u.name.slice(1) %></span
    >
  </div>
</div>
<% } %> <% }); %><% }); %>

</div>
<div class="col-lg-4">
  <div class="accordion" id="accordionSearch">
    <div class="card card-margin">
      <div class="card-header">
        <div class="mb-0">
          <button 
          class="btn btn-link text-left sidecard-txt" 
          type="button" 
          data-toggle="collapse" 
          data-target="#collapseSearch" 
          aria-expanded="false" 
          aria-controls="collapseSearch">
          Advance Search
          <i class="fa fa-search-plus" aria-hidden="true"></i>
          </button>
        </div>
      </div>

      <div id="collapseSearch" class="collapse" data-parent="#accordionSearch">
        <div class="card-body">
          <div>
            <h3>Advance Search</h3>
            <hr class="card-line" />
            <form action="/advanceSearch" method="GET">
              <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="title">Title</label>
                <div class="col-sm-9">
                  <input class="form-control" type="text" name="title" id="title" />
                </div>
              </div>
              <div class="form-group row">
                <label class="col-sm-3 col-form-label" for="author">Author</label>
                <div class="col-sm-9">
                  <input class="form-control" type="text" name="author" id="author" />
                </div>
              </div>
              <button type="submit" class="btn btn-outline-info btn-lg adv-search-btn">
                Search
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
